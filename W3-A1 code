class DataProcessor:
    def __init__(self, data): # Constructor to initialize data
        self.data = data

    def read_text(self): # Method to read text from a file

        file_path = "demo_file.txt"
        with open(file_path, 'r', encoding='utf-8') as file: # Read the file
            content = file.read()
        with open(file_path, 'a', encoding='utf-8') as file: # Append a line to the file
            file.write("\nEnd of File")
        
        return content
    
    def count(self):
        # Processing: count number of stars in the data
        star_count = self.data.count('*')
        print(f"Number of '*' characters in the data: {star_count}")
    
def main():

    processor = DataProcessor(data=None)
    processor.data = processor.read_text()
    processor.count()

if __name__ == "__main__":
    main()