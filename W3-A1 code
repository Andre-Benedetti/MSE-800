class DataProcessor:
    def __init__(self, data):
        self.data = data

    def read_text(self):

        file_path = r"demo_file.txt"
        with open(file_path, 'r') as file:
            content = file.read()
        return content
    
    def count(self):
        # Processing: count number of stars in the data
        star_count = self.data.count('*')
        print(f"Number of '*' characters in the data: {star_count}")
    

  
def main():

    processor = DataProcessor(data=None)
    processor.data = processor.read_text()
    print(f"Data read from file:\n{processor.data}\n")
    processor.count()

if __name__ == "__main__":
    main()